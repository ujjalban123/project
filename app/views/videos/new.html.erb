<h1>Post Video</h1>


<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for @video do |f| %>
      <% if f.object.errors.any? %>
        <div class="alert alert-danger">
          <p>The following errors prevent the video from being uploaded.</p>

          <ul>
            <% f.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="form-group">
        <%= f.drag_and_drop_file_field :clip, 'Upload your video here' %>
    </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <%= f.submit 'Post', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

