<h2>Edit profile</h2>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for User.new do |f| %>
      <% if f.object.errors.any? %>
        <div class="alert alert-danger">
          <p>The following errors prevent the image from being uploaded.</p>

          <ul>
            <% f.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


      <div class="form-group">
        <%= f.label :add_your_profile_picture %>
        <%= f.file_field :profile_pic, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :bio %>
        <%= f.text_field :bio, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :gender %>
        <%= f.text_field :gender, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :phone_no %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>
       <%= f.submit 'Edit profile', class: 'btn btn-primary' %>



  <% end %>    
</div>
</div>
