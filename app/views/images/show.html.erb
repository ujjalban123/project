<h2>Image</h2>
<meta charset="utf-8" name="viewport" content= "width=device-width, initial-scale=1.0"> 
<link rel="stylesheet" type="text/css" href="assets/stylesheet/application.css">
<div class="row">
  <div class="col-md-9">
    <div class="card">
      <div class="card-body p-2">
        <%= image_tag @image.image, class: 'd-block w-100' %>
      </div>
    </div>
  </div>
 <%= link_to @image.user.full_name, profile_path(@image.user.username) %>

    <p class="border-top mt-3 py-2">
      <% if @image.description.present? %>
        <%= @image.description %> -
      <% end %>
      <span class="text-muted"><%= time_ago_in_words @image.created_at %> ago</span>
    </p>
  </div>
</div>
