<!DOCTYPE html>
<html>
  <head>
    <title>Sciver</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<meta charset="utf-8" name="viewport" content= "width=device-width, initial-scale=1.0">
  <body>
    <div class="navbar navbar-expand-lg bg-dark navbar-dark mb-3">
      <div class="container">
      <ul class="navbar-nav mr-auto">
         <li class="nav-item">
            <p>Sciver</p>
          </li>
        
      </ul>
        <% if user_signed_in? %>
          <ul class="navbar-nav mr-auto">            
          <li class="nav-item">
            <%= link_to "Photos", images_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Videos", videos_path, class: 'nav-link' %>
          </li> 
          
          <li class="nav-item">
            <%= link_to "Post image", upload_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Post video", new_video_path, class: 'nav-link' %>
          </li>
         </ul>    
           <%= form_tag search_users_path do %>
           <%= text_field_tag :q, nil, placeholder: "Search people to follow" %>
           <%= submit_tag "Search",class: "btn btn-primary" %> 
            <% end %>

            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to current_user.full_name, profile_path(current_user.username), class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Log Out", destroy_user_session_path, class: 'nav-link', method: :delete %>
              </li>
             <li class="nav-item">
                <%= link_to "Edit account", edit_user_registration_path, class: 'nav-link' %>
            </li>
              <li class="nav-item">
                      <%= link_to "About Us", home_path, class: 'nav-link' %>
              </li>  
          </ul>

          <% else %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path, class: 'nav-link',style:"color: white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Create an Account", new_user_registration_path, class: 'btn btn-primary' %>
              </li>
               <li class="nav-item">
                  <%= link_to "About Us", home_path, class: 'nav-link',style:"color: white" %>
                </li>  
              </ul>
            <% end %>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
